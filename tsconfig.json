{
  "extends": "@tsconfig/node10",
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "alwaysStrict": true,
    "extendedDiagnostics": true,
    "forceConsistentCasingInFileNames": true,
    "listFiles": true,
    "listEmittedFiles": true,
    "target": "ES6"
  }
}
